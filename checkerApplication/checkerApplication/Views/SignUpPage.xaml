<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="checkerApplication.Views.SignUpPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:local ="clr-namespace:checkerApplication.ViewModels;assembly=checkerApplication"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Sign Up" BackgroundColor="White">

    <ContentPage.BindingContext>
        <local:SignUpViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid BackgroundColor="White" Padding="0,10,30,0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackLayout
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Grid.RowSpan="4"
                Grid.Row="0"
                VerticalOptions="EndAndExpand"
                
                >
                <!--THIS SL IN UWP - ROW=2, PHONE - ROW = 0 -->
                <Entry
                    Placeholder="Email" ClearButtonVisibility="WhileEditing" />
                <Entry
                    Placeholder="Confirm Email" ClearButtonVisibility="WhileEditing"/>
                <Entry
                    IsPassword="{Binding Path=HidePassword}"
                    Placeholder="Password" ClearButtonVisibility="WhileEditing"/>
                <Entry
                    IsPassword="{Binding Path=HidePassword}"
                    Placeholder="Confirm Password" ClearButtonVisibility="WhileEditing"/>
                <Entry
                    BindingContext="{Binding TempEmail}"
                    Placeholder="Restaurant Name" ClearButtonVisibility="WhileEditing"/>
                <Button
                x:Name="DismissSignButton"
                BackgroundColor="#B6CACB"
                Command="{Binding SignCommand}"
                CornerRadius="12"
                HorizontalOptions="FillAndExpand"
                Text="Sign-Up"
                VerticalOptions="FillAndExpand" BorderColor="#8C9B9A" BorderWidth="5"  />
            </StackLayout>
            <Image
                x:Name="Cover"
                Grid.Row="0"
                Grid.RowSpan="8"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Aspect="AspectFit"
                Source="Cover1.png" />
          
        </Grid>
    </ContentPage.Content>
</ContentPage>