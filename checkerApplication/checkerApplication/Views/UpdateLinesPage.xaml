<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="checkerApplication.Views.UpdateLinesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Update Lines"
    BackgroundColor="White">
    
            <Grid x:Name="UpdateLineGrid" Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <StackLayout Grid.ColumnSpan="2" FlowDirection="MatchParent" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
                <Frame x:Name="AddOutLineFrame" BorderColor="Gray"  
       CornerRadius="5">
                    <StackLayout x:Name="AddOutLine"  Spacing="2"   >
                        <Entry x:Name="OutlineName" Placeholder="outline name" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" FlowDirection="MatchParent" VerticalOptions="StartAndExpand"  />
                        <Entry x:Name="OutlineLimit" Placeholder="outline limit" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" FlowDirection="MatchParent" VerticalOptions="StartAndExpand" />
                        <!--  should be only int  -->
                        <Button Text="add outline" BackgroundColor="#B6CACB" VerticalOptions="EndAndExpand" BorderColor="#8C9B9A" BorderWidth="5"
                        CornerRadius="12" />
                    </StackLayout>
                </Frame>

                <Frame x:Name="AddLineFrame" BorderColor="Gray" 
       CornerRadius="5" FlowDirection="MatchParent" HorizontalOptions="FillAndExpand" >
                    <StackLayout x:Name="AddLine"  Spacing="2" HorizontalOptions="FillAndExpand" >
                        <Entry x:Name="LineName" Placeholder="line name" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" FlowDirection="MatchParent" VerticalOptions="StartAndExpand" />
                        <Entry x:Name="ChooseOutline" Placeholder="choose outline"  HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" FlowDirection="MatchParent" VerticalOptions="StartAndExpand"/>
                        <Entry x:Name="LineLimit" Placeholder="line limit"  HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing" FlowDirection="MatchParent" VerticalOptions="StartAndExpand"/>

                        <!--  should be some kind of rolling list  -->
                        <!--  should be only int  -->
                        <Button Text="add line" BackgroundColor="#B6CACB" VerticalOptions="End" BorderColor="#8C9B9A" BorderWidth="5"
                        CornerRadius="12" />
                    </StackLayout>
                </Frame>

            </StackLayout>
        

      

                
        <StackLayout x:Name="ExistingItems" Grid.Column="2">
                    <Label Text="existing lines:"  FontSize="20"/>
                    <!--sholud be dynamic list of the existing line (2 lists)
                    with options of remove or change-->
                </StackLayout>
                <Image x:Name="Logo" Source="CornerLogo.png" Grid.Row="0" Grid.Column="4" WidthRequest="150" Aspect="AspectFit" VerticalOptions="StartAndExpand" HorizontalOptions="EndAndExpand"/>
        <Button Text="submit all" Grid.Column="4" Grid.Row="4" BorderColor="#8C9B9A" BorderWidth="5"  BackgroundColor="PowderBlue" CornerRadius="15" Command="{Binding SubmitCommand}" />
            </Grid>
            
</ContentPage>